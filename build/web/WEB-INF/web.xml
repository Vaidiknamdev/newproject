<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>RegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Utility</servlet-name>
        <servlet-class>Utility</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserAuthentication</servlet-name>
        <servlet-class>UserAuthentication</servlet-class>
        <init-param>
            <param-name>userid</param-name>
            <param-value>vaidik</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>vaidik</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>FacultyAccountServlet</servlet-name>
        <servlet-class>FacultyAccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FacultyAccountUpdate</servlet-name>
        <servlet-class>FacultyAccountUpdate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SaveQuestionServlet</servlet-name>
        <servlet-class>SaveQuestionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/RegistrationServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Utility</servlet-name>
        <url-pattern>/Utility</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserAuthentication</servlet-name>
        <url-pattern>/UserAuthentication</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FacultyAccountServlet</servlet-name>
        <url-pattern>/FacultyAccountServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FacultyAccountUpdate</servlet-name>
        <url-pattern>/FacultyAccountUpdate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SaveQuestionServlet</servlet-name>
        <url-pattern>/SaveQuestionServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
